<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mgs.dao.SfileDAO">
	<resultMap id="BaseResultMap" type="com.mgs.entity.Sfile">
		<id column="id" jdbcType="VARCHAR" property="id" />
		<result column="fname" jdbcType="VARCHAR" property="fname" />
		<result column="fext" jdbcType="VARCHAR" property="fext" />
		<result column="fpath" jdbcType="VARCHAR" property="fpath" />
		<result column="flength" jdbcType="VARCHAR" property="flength" />
		<result column="state" jdbcType="INTEGER" property="state" />
		<result column="creater" jdbcType="VARCHAR" property="creater" />
		<result column="ctime" jdbcType="TIMESTAMP" property="ctime" />
		<result column="mtime" jdbcType="TIMESTAMP" property="mtime" />
	</resultMap>

	<select id="getFileInfoByPrimarykey" resultType="com.mgs.entity.Sfile">
		SELECT * FROM SFiles WHERE id = #{id}
	</select>

	<select id="queryEntireSaveFiles" resultType="com.mgs.entity.Sfile">
		SELECT * FROM SFiles WHERE state = 1
	</select>	

	<select id="queryAbandonSaveFiles" resultType="com.mgs.entity.Sfile">
		SELECT * FROM SFiles WHERE state = 0
	</select>

	<select id="queryFilesWithNane" resultType="com.mgs.entity.Sfile">
		SELECT * FROM SFiles WHERE fname like #{name} AND state = 1
	</select>
	
	<select id="queryFileByExtname" resultType="com.mgs.entity.Sfile">
		SELECT * FROM SFiles WHERE fext = #{ext}  AND state = 1
	</select>

	<insert id="addNewSavefileRecord" parameterType="com.mgs.entity.Sfile">
		<selectKey resultType="java.lang.String" order="BEFORE" keyProperty="id">
			select UUID()
		</selectKey>
		INSERT INTO SFiles (id, fname, fext, fpath, flength, state, creater, ctime, mtime) 
		   VALUES (#{id}, #{fname}, #{fext}, #{fpath}, #{flength}, 1, #{creater}, now(), now())
	</insert>

	<update id="removeSavefileRecord">
		UPDATE SFiles SET state = 0, mtime = now() WHERE id = #{id}
	</update>

	<update id="reviseSavefileRecord">
		UPDATE SFiles SET state = 1, mtime = now() WHERE id = #{id}
	</update>

</mapper>